<!DOCTYPE html>
<html>
<head>
  <title>BOOKERS</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
      <a class="navbar-brand" href="#">Bookers</a>
    <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
      <% if user_signed_in? %>
      <li class="">
        <%= link_to "Home", destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-home' %>
      </li>
      <li class="">
        <%= link_to 'Users', new_book_path,class: 'glyphicon glyphicon-user' %>
      </li>
      <li class="">
        <%= link_to 'Books', user_path(current_user.id), class:'glyphicon glyphicon-book' %>
      </li>
      <li class="">
      <%= link_to 'logout', user_path(current_user.id), class:'glyphicon glyphicon-log-out' %>
      </li>
      <% else %>
      <li class="">
        <%= link_to "Home", new_user_registration_path, class:'glyphicon glyphicon-home' %>
      </li>
      <li class="">
        <%= link_to "About", new_user_session_path,class:'glyphicon glyphicon-link' %>
      </li>
      <li class="">
        <%= link_to "sign up", new_user_registration_path, class:'glyphicon glyphicon-edit' %>
      </li>
      <li class="">
        <%= link_to "login", new_user_session_path, class:'glyphicon glyphicon-log-in' %>
      </li>
      <% end %>
    </ul>
  </div>
  </div>
  </nav>
  <%= yield %>
</body>
</html>
